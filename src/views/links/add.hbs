<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/links/add" method="POST">
                        <div class="form-group">
                            <input class="form-control" type="text" name="title" id="" placeholder="Title" autofocus required>
                        </div>
                        <div class="form-group">
                            <input type="url" name="url" class="form-control" id="" placeholder="URL" required>
                        </div>
                        <div class="form-group">
                            <textarea name="description" id="" rows="2" class="form-control" placeholder="Description" required></textarea>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-outline-success btn-block">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
